<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.srcg.srcg.MainActivity"
    tools:showIn="@layout/activity_main">


    <Button
        android:text="Escanear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="75dp"
        android:id="@+id/btn_scan"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="#3F51B5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conectar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="#43A047"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btn_scan"
        android:layout_alignEnd="@+id/btn_scan" />

    <Button
        android:id="@+id/disconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desconectar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="#D81B60"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btn_clean"
        android:layout_alignStart="@+id/btn_clean" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/txt_nuip"
        android:textSize="36sp"
        android:textColor="#D81B60"
        android:gravity="center"
        android:layout_below="@+id/btn_scan"
        android:layout_alignLeft="@+id/btn_scan"
        android:layout_alignStart="@+id/btn_scan"
        android:layout_alignRight="@+id/btn_clean"
        android:layout_alignEnd="@+id/btn_clean" />

    <Button
        android:text="Limpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:id="@+id/btn_clean"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="#90A4AE"
        android:layout_alignBaseline="@+id/btn_scan"
        android:layout_alignBottom="@+id/btn_scan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/txt_url"
        android:textSize="24sp"
        android:textColor="#607D8B"
        android:gravity="center"
        android:layout_below="@+id/txt_nuip"
        android:layout_alignLeft="@+id/txt_nuip"
        android:layout_alignStart="@+id/txt_nuip"
        android:layout_alignRight="@+id/txt_nuip"
        android:layout_alignEnd="@+id/txt_nuip" />
</RelativeLayout>
